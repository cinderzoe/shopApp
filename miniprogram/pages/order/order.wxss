/* pages/order/order.wxss */
@import "../addAddr/addAddr.wxss";

.order-list{background-color: #fff;margin-top: 20rpx;margin-bottom: 100rpx;}
.pro-info{padding: 34rpx 0;border-bottom: 1px solid #F0F0F0;display: flex;}
.list-arr{display: block;overflow: hidden;height: 480rpx;}
.list-arr .img{height: 160rpx;float: left;flex: 160rpx 0 0;background-position: center;background-size: cover;background-repeat: no-repeat;}
.list-arr .info{margin-left: 20rpx;flex: 1;}
.info-name{font-size: 30rpx;color: #333333;height: 42rpx;line-height: 42rpx;overflow: hidden;}
.info-attr{color: #BCBCBC;font-size: 26rpx;line-height: 36rpx;margin-top: 10rpx;}
.list-arr .info .bottom{margin-top: 30rpx;}
.info-prime{color: #FF6248;font-size: 30rpx;line-height: 42rpx;float: left;}
.info-quantity{color: #BCBCBC;font-size: 26rpx;float: right;line-height: 42rpx;}

.tips-info{margin-bottom: 240rpx;overflow: hidden;background-color: #fff;margin-top: -1px;}
.tips-info .box{font-size: 26rpx;color: #333333;line-height: 36rpx;padding: 32rpx 0;border-bottom: 1px solid #F0F0F0;}
.tips-info .box-name{float: left;}
.tips-info .box-input{float: right;text-align: right;width: 400rpx;}
.tips-info .box-input input{width: 100%;}
.bottom-nav{position: fixed;width: 100%;left: 0;bottom: 0;height: 100rpx;line-height: 100rpx;background-color: #F8F8F8;z-index: 99;}
.pay-btn{float: right;text-align: center;width: 218rpx;font-size: 34rpx;color: #fff;background-image: linear-gradient(90deg, #FF6248 0%, #FF9174 100%);}
.pay-prime{float: right;text-align: right;padding-right: 22rpx;font-size: 30rpx;color: #FF6248;}